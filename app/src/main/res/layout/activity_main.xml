<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="160dp"
    android:gravity="center_horizontal"
    tools:context="com.example.Driver_Management.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aladin"
        android:text="Driver Management"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/color1"
        android:textSize="36sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="162dp"
        android:layout_height="133dp"
        android:src="@drawable/logo"
         />

    <Button
        android:id="@+id/SeConnecterMain"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@color/color2"
        android:text="Se connecter"
        android:layout_marginTop="55dp"
        android:textColor="@android:color/white"

        />

    <Button
        android:id="@+id/inscrireMain"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@color/color2"
        android:text="S'inscrire"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:text="Driver Management App V.1.0.0"
        android:textColor="@color/color3"

        android:visibility="visible"
        tools:text="Driver Management App V.1.0.0" />
</LinearLayout>